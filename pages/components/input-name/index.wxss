.input-name{
    position:fixed;
    width:100%;
    height:100%;
    top:0;
    background:rgba(0,0,0,0.4);
    overflow: hidden;
    z-index: 99;
}
.input-name .pop-view{
    width: 80%;
    margin: 0 auto;
    background: #fff;
    padding: 20px;
    margin-top: 40%;
}
.input-name .pop-view .title{
    width: 100%;
    text-align: center;
    font-size: 18px;
    color: #333;
}
.input-name .pop-view input{
    font-size: 14px;
    color: #333;
    border:1px #f7f7f7 solid;
    padding: 20rpx 30rpx;
}
